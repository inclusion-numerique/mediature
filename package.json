      "@types/lodash.debounce": "^4.0.7",
      "@types/mjml": "^4.7.0",
      "@types/mjml-react": "^2.0.6",
      "@types/react": "^18.0.26",
      "date-fns": "^2.29.3",
      "dotenv": "^16.0.3",
      "dotenv-run-script": "^0.2.0",
